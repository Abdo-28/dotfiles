 configuration {
	modes: "drun";
	font: "Caskaydia Cove Nerd Font 10";
	show-icons: true;
	icon-theme: "Papirus";
	drun-display-format: "{generic}";
	ignored-prefixes: "";
	sort: true;
	sorting-method: "normal";
	case-sensitive: false;
	cycle: false;
	hover-select: true;
	eh: 2;
	scroll-method: 0;
	click-to-exit: true;
	steal-focus: true;
	display-drun: "search";
}

@import "~/.config/rofi/basetheme.rasi"

