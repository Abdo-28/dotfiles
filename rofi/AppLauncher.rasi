window {
  location: west;
  width: 25%;
  x-offset: 0.5%;
  y-offset: -2%;
}

inputbar {
  padding: 0.5%;
}

prompt, entry, case-indicator, textbox-prompt-colon {
  placeholder: "Type here";
}

listview {
  columns: 1;
  lines: 7;
  dynamic: false;
  spacing: 0.5em;
  padding: 0.5% 0.25%;
  fixed-columns: true;
  fixed-height: true;
}

element {
  orientation: horizontal;
  height: 10%;
  spacing: 1.2%;
  padding: 1% 1% 1% 1%;
  width: 10%;
}

element-text {
  vertical-align: 0.5;
  horizontal-align: 0;
}

element-icon {
    size: 5%;
}
