 configuration {
	modes: "drun";
	font: "Caskaydia Cove Nerd Font 10";
	location: 0;
	yoffset: 0;
	xoffset: 0;
	show-icons: true;
	icon-theme: "Papirus";
	drun-display-format: "{name}";
	ignored-prefixes: "";
	sort: true;
	sorting-method: "normal";
	case-sensitive: false;
	cycle: false;
	sidebar-mode: true;
	hover-select: true;
	eh: 2;
	scroll-method: 0;
	click-to-exit: true;
	steal-focus: true;
	display-drun: "search";
	kb-row-up: "Up,Super+k,Shift+Tab,Shift+ISO_Left_Tab";
	kb-row-down: "Down,Super+j";
	kb-row-right: "Super+l";
	kb-row-left: "Super+h";
	kb-accept-entry: "Super+Return,Return";
}

@import "~/.config/rofi/colors/green.rasi"
@import "~/.config/rofi/colors/gray.rasi"
@import "~/.config/rofi/colors/purple.rasi"
@import "~/.config/rofi/colors/red.rasi"

* {
  c1-1:	@p-green-1;
  c1-2:	@p-green-2;
  c2-1:	@p-green-3;
  c3-1:	@p-green-0;
  c4-1:	@p-red-0;
}

