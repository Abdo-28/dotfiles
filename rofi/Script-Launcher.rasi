window {
  location: north;
  y-offset: 0.75%;
  width: 75%;
}

inputbar {
  padding: 0.5%;
}

prompt, entry, case-indicator, textbox-prompt-colon {
  placeholder: "Select Option";
}

listview {
  columns: 6;
  lines: 1;
  dynamic: false;
  spacing: 0.75%;
  padding: 0.5% 0.5%;
}

element {
  children: [ element-text ] ;
  orientation: horizontal;
  padding: 0.68% 0%;
}

element-text {
  horizontal-align: 0.5;
}
